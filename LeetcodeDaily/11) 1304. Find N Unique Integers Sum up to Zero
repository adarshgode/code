class Solution {
    public int[] sumZero(int n) {
            int start = 0;
            int end = n-1;
            int value = 1;
            int[] arr = new int[n];
            while(start < end){
                arr[start++] = -value;
                arr[end--] = value;
                value++;
            }
        return arr;
    }
}
